@model IEnumerable<DocSign.Models.e_Mess>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Hộp thư đến</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @*<div class="panel-heading">
                    DataTables Advanced Tables
                </div>*@
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.BodyContent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sender)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.CreateDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Note)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                FileName
                            </th>
                            <th></th>
                        </tr>
                        </  thead>
                    <tbody>
                        @foreach (var item in Model.Where(x => x.IsRead != true))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BodyContent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sender)
                                </td>
                                <td>
                                    @item.CreateDate.ToString("dd/M/yyyy")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Document.FIleName)
                                </td>
                                <td>
                                    <a href="" class="btn btn-primary send-document" data-toggle="modal" data-reciver="@item.Sender" data-target="#exampleModal">Send</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@section scripts {
    <script>
        $('.send-document').on('click', function () {
            $('#toEmail').val($(this).data('reciver'))
        })
    </script>
}