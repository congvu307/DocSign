
@{
                /**/

                ViewBag.Title = "AddDoc";
                ViewBag.Header = "Create New Document";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (@ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}


<div class="row">

    @using (Html.BeginForm("AddDoc", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" id="file" name="file" class="input-file" />
        <div class="row">
            <div class="form-group col-md-4">
                <label for="Privacy">Privacy</label>
                <select id="Privacy" name="privacy" class="form-control">
                    <option value="Public" selected>Public</option>
                    <option value="Private">Private</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label for="Type">Type</label>
                <select id="Type" class="form-control" name="type">
                    <option value="Document" selected>Document</option>
                    <option value="Template">Template</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group  col-md-4">
                <label>Người tạo</label>
                <input class="form-control" type="text" value="@Request.Cookies["username"].Value" placeholder="" readonly>
            </div>
        </div>
        <div>  <button type="submit" class="btn btn-outline-secondary">Tải lên</button></div>
    }
</div>
<a class="btn btn-outline-primary" href="/admin/home/CreateBlankDocument"> Create New Blank Document</a>